WindowManager:
    MainWindow:
    MechanicsList:
    Speed:
    Efficiency:

<MainWindow>:
    name: "main"

    MDGridLayout:
        cols: 2
        padding: 30, 40, 30, 130
        spacing: 30, 10
        md_bg_color: app.theme_cls.bg_darkest

        Button
            on_release:
                app.root.current = "mech"
                root.manager.transition.direction = "left"
        Button
        Label
            text:"Механика"
            size_hint: 1, 0.2
        Label
            text: "МКТ"
            size_hint: 1, 0.2

        Button
        Button
        Label
            text:"Электродинамика"
            size_hint: 1, 0.2
        Label
            text: "Оптика"
            size_hint: 1, 0.2

        Button
        Button
        Label
            text:"Квантовая физика"
            size_hint: 1, 0.2
        Label
            text: "Ядерная физика"
            size_hint: 1, 0.2

<MechanicsList>:
    name: "mech"

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Механика"
            md_bg_color: app.theme_cls.bg_dark
            elevation: 10
            left_action_items: [["arrow-left", lambda x: app.callback(x)]]
            pos_hint: {"top": 1}
        ScrollView:
            effect_cls: 'ScrollEffect'
            MDList:
                md_bg_color: app.theme_cls.bg_darkest
                pos_hint: {"top": 1}
                OneLineAvatarListItem:
